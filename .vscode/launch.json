{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch with node",
			"program": "${file}"
		},
		{
			"name": "Launch from dist",
			"type": "node",
			"request": "launch",
			"preLaunchTask": "compile", // ensure dist is fresh (compile before running)
			"program": "${workspaceRoot}/.vscode/runFromDist.js",
			"args": ["${file}"],
			"cwd": "${workspaceRoot}",
			"env": {
				"NODE_ENV": "development",
				"NODE_PATH": "${workspaceRoot}/dist"
			},
			"sourceMaps": true,
			"outputCapture": "std",
			"skipFiles": ["node_modules/**"]
		},
		{
			"type": "node",
			"protocol": "inspector",
			"request": "launch",
			"name": "Launch with babel-node",
			"preLaunchTask": null,
			"runtimeExecutable": "babel-node", // you have to npm i -g babel-node
			"runtimeArgs": ["--nolazy"],
			"stopOnEntry": false,
			"env": {
				"NODE_ENV": "development"
			},
			"sourceMaps": true,
			"program": "${file}",
			"skipFiles": ["node_modules/**"]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attacher au port",
			"address": "localhost",
			"port": 5858
		}
	]
}
